int RPotPin2 = 2;
 
int RPotPin1 = 1;
 
int RPotPin0 = 0;
 
int x=0;
 
int y=0;
 
int z=0;

void setup() {
  // put your setup code here, to run once:
  Serial.begin(9600);
}

void loop() {
  // put your main code here, to run repeatedly:
  x= analogRead(RPotPin0);
 
  y = analogRead(RPotPin1);
 
  z = analogRead(RPotPin2);
 
  Serial.print(x);
  Serial.print(" ");
  Serial.print(y);
  Serial.print(" ");
  Serial.println(z) ;
 
  delay(500);
}
